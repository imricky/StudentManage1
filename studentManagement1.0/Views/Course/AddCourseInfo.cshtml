    Ext.onReady(function () {
        var states = Ext.create('Ext.data.Store', {
            fields: ['abbr', 'name'],
            data : [
                {"abbr":"male", "name":"男"},
                {"abbr":"famale", "name":"女"}


            ]
        });

        var form1 = new Ext.FormPanel({
            layout: 'form',
