@{
    Layout = "~/Views/Shared/_myLayout.cshtml";
}

@section showcourse{
    <script>

    //    左边的树
    Ext.onReady(function () {
        Ext.QuickTips.init();
        var itemsPerPage = 2;//分页器

        //建立数据模型
        Ext.define('courseModel', {
            extend: 'Ext.data.Model',
            fields: [{
                name: 'kch',
                type: 'string',
                mapping: 'kch'
            }, {
                name: 'kcm',
                type: 'string',
                mapping: 'kcm'
            }, {
                name: 'ach',
                type: 'int',
                mapping: 'ach'
            }, {
                name: 'remarks',
                type: 'string',
                mapping: 'remarks'
            }]
        });
        Ext.define('idModel',{
            extend: 'Ext.data.Model',
            fields: [{
                name: 'id',
                type: 'string',
                mapping: 'id'
            }]
        });



        var toolbar = Ext.create('Ext.toolbar.Toolbar', {
            region: 'north',
            renderTo: Ext.getBody(),
            //width   : 700,
            height:40,
            items: [
                {
                    id:'add',
                    text: '新增'
                },{
                    id:'del',
                    text: '删除'
                },{
                    id:'alter',
                    text: '修改'
                },{
                    id:'sel',
                    text: '查询'
                },
                { xtype: 'tbspacer',width:400},
                {
                    xtype: 'tbtext',
                    text: 'power by excellent Ext.js & c#',
                },
                '->', // same as { xtype: 'tbfill' }
                {
                    xtype    : 'textfield',
                    name     : 'field1',
                    emptyText: '输入查询内容'
                },

                '-', // same as {xtype: 'tbseparator'} to create Ext.toolbar.Separator
                { xtype: 'tbspacer'},
                {
                    // xtype: 'button', // default for Toolbars
                    id:'ser',
                    text: '搜索'
                }
            ]
        });

        var store = Ext.create('Ext.data.Store', {
            model: 'courseModel',
            autoLoad: true,
            pageSize: itemsPerPage, // items per page
            proxy: {
                type: 'ajax',
                url: 'GetListAdo',
                reader: {
                    type: 'json',
                    root: 'items',
                    totalProperty: 'total'
                }
            }
        });


        var grid = Ext.create('Ext.grid.Panel', {
            region: 'center',
            store: store,
            columns: [
                { xtype: "rownumberer", text: "序号", width: 40 },//grid.panel默认不显示行号，于是要手动添加
                { header: '课程号', dataIndex: 'kch', width: 180, sortable: true },
                { header: '课程名', dataIndex: 'kcm', width: 180, sortable: true },
                { header: '及格分数', dataIndex: 'ach', width: 100, sortable: true },
                { header: '备注', dataIndex: 'remarks', flex: 1, sortable: true }
            ],
            dockedItems: [{
                xtype: 'pagingtoolbar',
                store: store,   // same store GridPanel is using
                dock: 'bottom',
                displayInfo: true
            }],
            renderTo: Ext.getBody()
        });




        var form =  Ext.create('Ext.form.Panel', {
            region: 'north',
            height: 150,
            frame: true,
            layout: 'border',
            fieldDefaults : {
                msgTarget: 'side'
            },
            defaults: {
                anchor: '100%'
            },
            items: [{
                xtype: 'container',
                region: 'north',
                border: false,
                layout:  'column',
                items: [{
                    xtype: 'container',
                    border: false,
                    columnWidth: .4,
                    defaultType: 'textfield',
                    items: [{
                        fieldLabel: '课程号',
                        anchor: '95%',
//                        emptyText : '请输入课程号，必须',
                        name: 'kch'
                    },{
                        fieldLabel: '课程名',
//                        emptyText : '请输入课程名，必须',
                        anchor: '95%',
                        name: 'kcm'
                    }]

                },{
                    xtype: 'container',
                    columnWidth: .4,
                    border: false,
                    layout:  'anchor',
                    defaultType: 'textfield',
                    items: [{
                        fieldLabel: '及格分数',
                        name: 'ach',
                        value: 0,
                        anchor: '95%'
                    },{
                        fieldLabel: '备注',
                        name: 'remarks',
//                        placeholder: 'qing',
                        emptyText : '请输入备注，可不填',
                        anchor: '95%'
                    }]
                }]
            }]

        });
        Ext.create('Ext.container.Viewport',{
            id: 'viewPort',
            layout: 'border',
            renderTo: Ext.getBody(),
            items: [
                toolbar,form,grid
            ]
        })


        //建立顶部工具条


        //建立存储
        var states = Ext.create('Ext.data.Store', {
            fields: ['abbr', 'name'],
            data : [
                {"abbr":"male", "name":"男"},
                {"abbr":"famale", "name":"女"}


            ]
        });

         //设置按钮事件
        //新增
        toolbar.items.get('add').on('click',function () {
                var top = window.parent;

                top.openTab('@Url.Content("~/Course/AddCourseInfo")', 'StudentInfoDetail', '添加课程信息');
        })

        //修改
        toolbar.items.get('alter').on('click',function () {
                var data = grid.getSelectionModel().getSelection();
                //alert(data);
                if (data.length > 0) {
                    var id = data[0].data['kch'];
                    var top = window.parent;
                    alert('您修改的课程号为：'+id);
                    top.openTab('@Url.Content("~/Course/AddCourseInfo")' + "?id=" + id + "&type=1", 'StudentInfoDetail1', '修改课程信息');

                }
        })

        //删除
        toolbar.items.get('del').on('click',function () {
                var data = grid.getSelectionModel().getSelection();
                if (data.length > 0) {
                    var kch = data[0].data['kch'];
                    alert(kch);
                    Ext.Ajax.request({
                        url: '@Url.Content("~/Course/PostDataDel")',
                        params: {
                            kch: kch
                        },
                        success: function (response) {
                            var text = response.responseText;
                            alert('成功了！');
                        }
                    });
                }
                store.load();

        })

        //查询
        toolbar.items.get('sel').on('click',function () {
            alert(Ext.encode(form.getForm().getValues()));
            Ext.apply(store.proxy.extraParams, { 'jsonFilter': Ext.encode(form.getForm().getValues()) });
            store.load();
        })


    })
    </script>



    }
