@{
    Layout = "~/Views/Shared/_myLayout.cshtml";
}

@section addgrade{
    <script>

        var id = '@ViewBag.ID';
        var type = '@ViewBag.type';
    Ext.onReady(function () {
        var states = Ext.create('Ext.data.Store', {
            fields: ['abbr', 'name'],
            data : [
                {"abbr":"male", "name":"男"},
                {"abbr":"famale", "name":"女"}
            ]
        });


        Ext.Ajax.request({
            url: '@Url.Content("~/Grade/PostDataGet")',
            params: {
                id: id
            },
            success: function (response) {
                alert(response.responseText);
                var data = Ext.decode(response.responseText);
                form.getForm().setValues(data[0]);
                // alert( Ext.encode(form.getForm().getValues()));
            }
        });

        Ext.define('idModel', {
            extend: 'Ext.data.Model',
            fields: [{
                name: 'id',
                type: 'string',
                mapping: 'id'
            }]
        });

        var states = Ext.create('Ext.data.Store', {
            model: 'idModel',
            autoLoad: true,
            proxy: {
                type: 'ajax',
                url: 'GetStuId',
                reader: {
                    type: 'json',
                    root: 'items',
                    totalProperty: 'total'
                }
            }
        });

        Ext.define('kchModel', {
            extend: 'Ext.data.Model',
            fields: [{
                name: 'kch',
                type: 'string',
                mapping: 'kch'
            }]
        });

        var states2 = Ext.create('Ext.data.Store', {
            model: 'kchModel',
            autoLoad: true,
            proxy: {
                type: 'ajax',
                url: 'GetCouKch',
                reader: {
                    type: 'json',
                    root: 'items',
                    totalProperty: 'total'
                }
            }
        });


        var form = new Ext.FormPanel({
            layout: 'form',
            autoHeight: true,
            frame: true,
            renderTo: Ext.getBody(),
            title: '<center style="curor:hand" onclick="window.location.reload();">学生成绩表-编辑</center>',
            style: 'margin-left:auto;margin-right:auto;width:500px;margin-top:200px;',

            //设置标签对齐方式
            labelAlign: 'right',
            //设置标签宽
            labelWidth: 170,
            //设置按钮的对齐方式
            buttonAlign:'center',
            //默认元素属性设置
            defaults:{
                width:180
            },
            items: [{
                fieldLabel: '学号',
                name: 'id',
                xtype: 'combo',
                store: states,
                displayField: "id",
                valueField: "id",
                queryMode: 'local',
            },{
                fieldLabel: '课程号',
                store: states2,
                name: 'kch',
                xtype: 'combo',
                queryMode:'local',
                displayField: "kch",
                valueField: "id",

            },{
                fieldLabel: '分数'
                ,name:'ach'
                ,xtype:'numberfield'
            }],
            buttons: [{
                text: "添 加",
                id: 'add'
                ,handler:function(){
                    MsgInfo();
                }
            }, {
                text: "取 消",
                id: 'cel'
                ,handler:function(){
                    form.form.reset();
                }
            }]
        });

        function MsgInfo(str_msg) {
            if (type == 1) {
                Ext.Ajax.request({
                    url: '@Url.Content("~/Grade/AlterData")',
                    params: {
                        id: id,
                        data: Ext.encode(form.getForm().getValues())
                    },
                    success: function (response) {
                        var text = response.responseText;

                    }
                });
            }
            else {
                alert(Ext.encode(form.getForm().getValues()));
                Ext.Ajax.request({
                    url: '@Url.Content("~/Grade/PostData")',
                    params: {
                        data: Ext.encode(form.getForm().getValues())
                    },
                    success: function (response) {
                        var text = response.responseText;
                        alert(text);
                    }
                });
            }
        }


        Ext.create('Ext.container.Viewport',{
            id: 'viewPort',
            style : 'background-image:url(../images/studentGrade.jpg);background-repeat: no-repeat;filter:"progid:DXImageTransform.Microsoft.AlphaImageLoader(sizingMethod=\'scale\')";-moz-background-size:100% 100%;background-size:100% 100%;',
            layout: 'border',
            items:[
                toolbar
            ]
        })
    })




    </script>

    }
