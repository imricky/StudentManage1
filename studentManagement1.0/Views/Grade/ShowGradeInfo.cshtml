@{
    Layout = "~/Views/Shared/_myLayout.cshtml";
}
@section showgrade{
    <script>

    //    左边的树
    Ext.onReady(function () {
        Ext.QuickTips.init();
//        renderTo: Ext.getBody();
        //建立数据模型
        var itemsPerPage = 2;   // set the number of items you want per page

        Ext.define('gradeModel', {
            extend: 'Ext.data.Model',
            fields: [{
                name: 'id',
                type: 'string',
                mapping: 'id'
            }, {
                name: 'name',
                type: 'string',
                mapping: 'name'
            }, {
                name: 'ach1',
                type: 'int',
                mapping: 'ach1'
            }, {
                name: 'ach2',
                type: 'int',
                mapping: 'ach2'
            }, {
                name: 'ach3',
                type: 'int',
                mapping: 'ach3'
            }, {
                name: 'ach4',
                type: 'int',
                mapping: 'ach4'
            }, {
                name: 'ach5',
                type: 'int',
                mapping: 'ach5'
            }]
        });
        Ext.define('idModel',{
            extend: 'Ext.data.Model',
            fields: [{
                name: 'id',
                type: 'string',
                mapping: 'id'
            }]
        });

        Ext.define('kchModel', {
            extend: 'Ext.data.Model',
            fields: [{
                name: 'kch',
                type: 'string',
                mapping: 'kch'
            }]
        });

        var states = Ext.create('Ext.data.Store', {
            model: 'idModel',
            autoLoad: true,
            proxy: {
                type: 'ajax',
                url: 'GetStuId',
                reader: {
                    type: 'json',
                    root: 'items',
                    totalProperty: 'total'
                }
            }
        });

        var states2 = Ext.create('Ext.data.Store', {
            model: 'kchModel',
            autoLoad: true,
            proxy: {
                type: 'ajax',
                url: 'GetCouKch',
                reader: {
                    type: 'json',
                    root: 'items',
                    totalProperty: 'total'
                }
            }
        });
        var store = Ext.create('Ext.data.Store', {
            model: 'gradeModel',
            autoLoad: true,
            pageSize: itemsPerPage,
            proxy: {
                type: 'ajax',
                url: 'GetListAdo',
                reader: {
                    type: 'json',
                    root: 'items',
                    totalProperty: 'total'
                }
            }
        });

        var toolbar = Ext.create('Ext.toolbar.Toolbar', {
            region: 'north',
            renderTo: Ext.getBody(),
            //width   : 700,
            height:40,
            items: [
                {
                    id:'add',
                    text: '新增'
                },{
                    id:'del',
                    text: '删除'
                },{
                    id:'alter',
                    text: '修改'
                },{
                    id:'sel',
                    text: '查询'
                },
                { xtype: 'tbspacer',width:400},
                {
                    xtype: 'tbtext',
                    text: 'power by excellent Ext.js & c#',
                },
                '->', // same as { xtype: 'tbfill' }
                {
                    xtype    : 'textfield',
                    name     : 'field1',
                    emptyText: '输入查询内容'
                },

                '-', // same as {xtype: 'tbseparator'} to create Ext.toolbar.Separator
                { xtype: 'tbspacer'},
                {
                    // xtype: 'button', // default for Toolbars
                    id:'ser',
                    text: '搜索'
                }
            ]
        });


        var grid = Ext.create('Ext.grid.Panel',{
            region: 'center',
            store: store,
            columns: [
                { xtype: "rownumberer", text: "序号", width:40 },//grid.panel默认不显示行号，于是要手动添加
                 //sortable:true 允许排序
                {header: '学号',  dataIndex: 'id', width:120,sortable:true },
                {header: '姓名',  dataIndex: 'name', width:120,sortable:true },
                {header: '语文',  dataIndex: 'ach1', width:120,sortable:true },
                {header: '数学',  dataIndex: 'ach2', width:120,sortable:true },
                {header: '英语',  dataIndex: 'ach3', width:120,flex: 1,sortable:true },
                {header: '物理',  dataIndex: 'ach4', width:120,flex: 1,sortable:true },
                {header: '总分',  dataIndex: 'ach5', width:120,flex: 1,sortable:true },
            ],
            dockedItems: [{
                xtype: 'pagingtoolbar',
                store: store,   // same store GridPanel is using
                dock: 'bottom',
                displayInfo: true
            }],
            renderTo: Ext.getBody()
        });


        var form =  Ext.create('Ext.form.Panel', {
            region: 'north',
            height: 150,
            frame: true,
            layout: 'border',
            fieldDefaults : {
                msgTarget: 'side'
            },
            defaults: {
                anchor: '100%'
            },
            items: [{
                xtype: 'container',
                region: 'north',
                border: false,
                layout:  'column',
                items: [{
                    xtype: 'container',
                    border: false,
                    columnWidth: .4,
                    defaultType: 'textfield',
                    items: [{
                        xtype: 'combo',
                        fieldLabel: '学号',
                        store: states,
                        anchor: '95%',
                        name: 'id',
                        queryMode: 'local', //查询模式
                        //editable: false, //是否可编辑/
                        displayField: 'id',           //显示的字段
                        valueField: 'id'            //值的字段
                    },{
                        xtype: 'combo',
                        fieldLabel: '课程号',
                        store: states2,
                        anchor: '95%',
                        name: 'kch',
                        queryMode: 'local', //查询模式
                        //editable: false, //是否可编辑
                        displayField: 'kch',           //显示的字段
                        valueField: 'kch'            //值的字段
                    }]

                },{
                    xtype: 'container',
                    columnWidth: .4,
                    border: false,
                    layout:  'anchor',
                    defaultType: 'textfield',
                    items: [{
                        fieldLabel: '分数',
                        name: 'ach',
                        value: 0,
                        anchor: '95%'
                    },{
                        xtype: 'container',
                        columnWidth: .4,
                        border: false,
                        layout:  'column',
                        defaultType: 'textfield',
                        items: [{
                            fieldLabel: '分数区间',
                            columnWidth: .5,
                            name: 'achlow',
                            anchor: '95%'
                        },{
                            labelWidth:55,
                            fieldLabel: '到',
                            columnWidth: .4,
                            name: 'achhigh',
                            anchor: '95%'
                        }]
                    }]
                }]
            }]

        });
        Ext.create('Ext.container.Viewport',{
            id: 'viewPort',
            layout: 'border',
            renderTo: Ext.getBody(),
            items: [
                toolbar,form,grid
            ]
        })


        //新增
        toolbar.items.get('add').on('click',function () {
            //iframe调用父窗口中的OpenTab函数
            var top = window.parent;
            top.openTab('@Url.Content("~/Grade/AddGradeInfo")','studentInfoDetail3','添加学生成绩')
        })

        //修改
        toolbar.items.get('alter').on('click',function () {
           
            var data = grid.getSelectionModel().getSelection();
            alert(data);
            if (data.length > 0)
            {
                var id = data[0].data['id'];
                var top = window.parent;
                alert('选择修改的学号为：' + id);
                top.OpenTab('@Url.Content("~/Grade/AddGradeInfo")' + "?id=" + id + "&type=1", 'StudentInfoDetai3', '修改学生成绩');
            }
        })

        //删除
toolbar.items.get('del').on('click', function () {
            var data = grid.getSelectionModel().getSelection();
            //console.log(data);
            Ext.onReady(function () {
                Ext.MessageBox.confirm('提示', '确定要删除该记录吗？', callBack);
                function callBack(msg) {
                    if (msg == 'yes' && data.length > 0) {
                        var id = data[0].data.id;
                        //console.log(id);
                        Ext.Ajax.request({
                            url: 'PostDataDel',
                            params: {
                                id: id
                            },
                            success: function (response) {
                                var text = response.responseText;
                                alert(text + "已被删除")
                            }
                        });
                        store.load();
                    }

                }
            })
        })

        //查询
        toolbar.items.get('sel').on('click', function () {
            //Ext.encode( Mixed o ) : String： json对象转换json字符串
            //Ext.decode(String json ) : Object： json字符串转换json对象
            //apply方法的签名为“apply( Object obj, Object config, Object defaults ) : Object”，
            //该方法包含三个参数，第一个参数是要拷贝的目标对象，第二个参数是拷贝的源对象，第三个参数是可选的，表示给目标对象提供一个默认值
            alert(Ext.encode(form.getForm().getValues()));
            Ext.apply(store.proxy.extraParams, { 'jsonFilter': Ext.encode(form.getForm().getValues()) });
            store.load();

        })




    })
    </script>

    }

